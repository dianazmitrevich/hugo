{
    "compilerOptions": {
        "target": "es6",
        "lib": ["dom", "es6"],
        "allowJs": true,
        "jsx": "react",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src"]
}
